{
    "appId": "com.drivertracker.app",
    "appName": "Driver Tracker",
    "webDir": "dist",
    "server": {
        "androidScheme": "https"
    },
    "plugins": {
        "SplashScreen": {
            "launchShowDuration": 2000,
            "launchAutoHide": true,
            "backgroundColor": "#0f172a",
            "showSpinner": false
        },
        "StatusBar": {
            "style": "DARK",
            "backgroundColor": "#0f172a"
        },
        "LocalNotifications": {
            "smallIcon": "ic_stat_location",
            "iconColor": "#6366f1"
        },
        "BackgroundGeolocation": {
            "enableHeadless": true
        }
    }
}